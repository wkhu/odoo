<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_product_brand_form_view" model="ir.ui.view">
            <field name="name">product.brand.form</field>
            <field name="model">product.brand</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="logo" widget="image"/>
                        </group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_product_brand_tree_view" model="ir.ui.view">
            <field name="name">product.brand.tree</field>
            <field name="model">product.brand</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <record id="action_product_brand_view" model="ir.actions.act_window">
            <field name="name">Product Brand</field>
            <field name="res_model">product.brand</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem action="action_product_brand_view"
            id="menu_product_brand_form"
            parent="base.menu_sale_config"/>

