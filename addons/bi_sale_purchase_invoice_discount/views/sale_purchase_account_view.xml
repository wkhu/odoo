<?xml version="1.0"?>
<openerp>
	<data>
		<record id="view_account_account_discount_form" model="ir.ui.view">
			<field name="name">account.account.discount.form.view</field>
			<field name="model">account.account</field>
			<field name="inherit_id" ref="account.view_account_form" />
			<field name="arch" type="xml">
				<field name="user_type_id" position="after">
					<field name="discount_account" />
				</field>
			</field>
		</record>
		
		
		<record id="view_account_invoice_discount_form" model="ir.ui.view">
			<field name="name">account.invoice.discount.form.view</field>
			<field name="model">account.invoice</field>
			<field name="inherit_id" ref="account.invoice_form" />
			<field name="arch" type="xml">
				<field name="amount_tax" position="before">
					<field name="discount_account" domain="[('discount_account', '=', True)]" options="{'no_create': True}" />
					<field name="discount_type_id" options="{ 'no_create': True}" />
					<field name="discount_value" />
					<field name="amount_after_discount" />
				</field>
			</field>
		</record>
		
		<record id="view_vendor_invoice_discount_form" model="ir.ui.view">
			<field name="name">account.invoice.discount.form</field>
			<field name="model">account.invoice</field>
			<field name="inherit_id" ref="account.invoice_supplier_form" />
			<field name="arch" type="xml">
				<field name="amount_tax" position="before">
					<field name="discount_account" domain="[('discount_account', '=', True)]" options="{'no_create': True}" />
					<field name="discount_type_id" options="{ 'no_create': True}" />
					<field name="discount_value" />
					<field name="amount_after_discount" />
				</field>
			</field>
		</record>
		
		
		
		<record id="view_sale_discount_form" model="ir.ui.view">
			<field name="name">sale.order.discount.form.view</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form" />
			<field name="arch" type="xml">
				<field name="pricelist_id" position="before">
					<field name="apply_discount" />
				</field>
				<field name="amount_tax" position="before">
					<field name="discount_account" domain="[('discount_account', '=', True),('user_type_id.name','=','Expenses')]" options="{'no_create': True}" attrs ="{'invisible': [('apply_discount' ,'=', False)]}"/>
					<field name="discount_type_id" options="{ 'no_create': True}" attrs ="{'invisible': [('apply_discount' ,'=', False)]}" />
					<field name="discount_value" attrs ="{'invisible': [('apply_discount' ,'=', False)]}"/>
					<field name="amount_after_discount" attrs ="{'invisible': [('apply_discount' ,'=', False)]}"/>
				</field>
			</field>
		</record>

		<record id="view_purchase_discount_form" model="ir.ui.view">
			<field name="name">purchase.order.discount.form.view</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_form" />
			<field name="arch" type="xml">
				<field name="date_order" position="before">
					<field name="apply_discount" />
				</field>
				<field name="amount_tax" position="before">
					<field name="discount_account" domain="[('discount_account', '=', True),('user_type_id.name','=','Income')]" options="{ 'no_create': True}" attrs ="{'invisible': [('apply_discount' ,'=', False)]}"/>
					<field name="discount_type_id" options="{ 'no_create': True}" attrs ="{'invisible': [('apply_discount' ,'=', False)]}"/>
					<field name="discount_value" attrs ="{'invisible': [('apply_discount' ,'=', False)]}"/>
					<field name="amount_after_discount" attrs ="{'invisible': [('apply_discount' ,'=', False)]}"/>
				</field>
			</field>
		</record>


	
	</data>
</openerp>
    